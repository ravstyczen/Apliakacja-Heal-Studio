# Google OAuth Credentials
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-random-secret-here

# Google Sheets
# Create a spreadsheet and paste its ID here
GOOGLE_SHEETS_ID=your-spreadsheet-id

# Google Calendar
# The calendar ID to use (usually "primary" or a specific calendar ID)
GOOGLE_CALENDAR_ID=primary

# Google Service Account (for server-side API access)
# Create at: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----"

# Email Settings (for sending regulations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-gmail@gmail.com
SMTP_PASSWORD=your-app-password

# App URL (for regulation acceptance links)
APP_URL=http://localhost:3000
